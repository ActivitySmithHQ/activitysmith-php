{
  "name": "activitysmith/activitysmith",
  "description": "Official ActivitySmith PHP SDK",
  "type": "library",
  "license": "MIT",
  "homepage": "https://activitysmith.com/docs/sdks/php",
  "keywords": [
    "activitysmith",
    "live-activities",
    "push-notifications",
    "api",
    "sdk"
  ],
  "authors": [
    {
      "name": "ActivitySmith",
      "email": "adam@activitysmith.com"
    }
  ],
  "require": {
    "php": ">=8.1",
    "ext-json": "*",
    "guzzlehttp/guzzle": "^7.8"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  },
  "autoload": {
    "psr-4": {
      "ActivitySmith\\": "src/",
      "ActivitySmith\\Generated\\": "generated/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ActivitySmith\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --colors=always -c phpunit.xml.dist"
  }
}
